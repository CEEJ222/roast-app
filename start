#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}ðŸš€ Starting Roast App Development Servers${NC}"

# Function to cleanup on exit
cleanup() {
    echo -e "\n${YELLOW}ðŸ›‘ Stopping servers...${NC}"
    kill $BACKEND_PID 2>/dev/null
    kill $FRONTEND_PID 2>/dev/null
    exit 0
}

# Set up signal handlers
trap cleanup SIGINT SIGTERM

# Start Backend
echo -e "${YELLOW}ðŸ“¡ Starting backend server...${NC}"
cd backend
source venv/bin/activate
uvicorn main:app --reload --host 0.0.0.0 --port 8000 &
BACKEND_PID=$!

# Wait a moment for backend to start
sleep 2

# Start Frontend
echo -e "${YELLOW}ðŸŽ¨ Starting frontend server...${NC}"
cd ../frontend
npm run dev &
FRONTEND_PID=$!

# Wait a moment for frontend to start
sleep 3

echo -e "${GREEN}âœ… Servers started successfully!${NC}"
echo -e "${GREEN}ðŸ“¡ Backend:  http://localhost:8000${NC}"
echo -e "${GREEN}ðŸŽ¨ Frontend: http://localhost:5173${NC}"
echo -e "${GREEN}ðŸ“š API Docs: http://localhost:8000/docs${NC}"
echo -e "\n${YELLOW}Press Ctrl+C to stop both servers${NC}"

# Wait for background processes
wait
